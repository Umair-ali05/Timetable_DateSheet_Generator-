
@model Timetable_DateSheet_Generator.Models.ViewModels.LoginModel
@{
    ViewData["Title"] = "login";
    Layout = "~/Views/Shared/Login.cshtml";
}

<center><h2 style="color:azure">Automated Timetable Generator</h2></center>
<hr />
<div class="row">
    <div class="col-12">
        <div class="form-center">
            <form asp-action="login" asp-controller="Account"  >
                <center><h2 style="color:rebeccapurple">Login</h2></center>
              @* <center><img src="~/dist/img/avatar5.png" /></center>*@ 
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" placeholder="Email." class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" placeholder="Password." class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="custom-checkbox">
                        <input asp-for="RemeberMe" />
                        <label asp-for="RemeberMe">
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" style="background-color:rebeccapurple" class="btn btn-primary btn-block" />
                </div>
            </form>
        </div>
    </div>
</div>



