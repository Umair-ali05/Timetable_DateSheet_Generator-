<div style="display:none" id="Click_Details" class="=btn btn-primary" data-toggle="modal" data-target="#modal-lg_Details"></div>
<div class="modal fade" id="modal-lg_Details">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Student Details</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-8">
                        <div class="row">
                            <div class="col-sm-12" style="padding-top:10%">
                                <div class="text-center">
                                    
                                        @if (!string.IsNullOrEmpty(ViewBag.FPic))
                                        {
                                            <img class=" img-circle"
                                                 src="@ViewBag.FPic"
                                                 alt="User profile picture" width="200" height="200">
                                        }
                                        else
                                        {
                                            <img class=" img-circle"
                                                 src="~/dist/img/user.png"
                                                 alt="User profile picture" width="200" height="200">
                                        }                                    
                                </div>
                            </div>
                        </div>
                        <div class="row"  style="padding-top:5%">
                            <div class="col-sm-6">
                                <h6><i style="color:#17a2b8" class="fa fa-university"></i> Institute</h6>
                                <p><i>@Model.Program.Department.Institute.InstituteName</i></p>
                            </div>
                            <div class="col-sm-6">
                                <h6><i style="color:#17a2b8" class="fa fa-th-list"></i> Department</h6>
                                <p><i>@Model.Program.Department.DepartmentName</i></p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <h6><i style="color:#17a2b8" class="fa fa-graduation-cap"></i> Program</h6>
                                <p><i>@Model.Program.ProgramName</i></p>
                            </div>
                            <div class="col-sm-6">
                                <h6><i style="color:#17a2b8" class="fa fa-sort-alpha-up"></i> Enrollment</h6>
                                <p><i>@Model.StudentEnrollment</i></p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <h6><i style="color:#17a2b8" class="fa fa-user"></i> Name</h6>
                                <p><i>@ViewBag.FName</i></p>
                            </div>
                            <div class="col-sm-6">
                                <h6><i style="color:#17a2b8" class="fa fa-envelope"></i> Email</h6>
                                <p><i><a href="#">@ViewBag.FEmail</a> </i></p>
                            </div>
                        </div>

                    </div>
                    <div class="col-sm-4" >
                        <h6>Modified By</h6>
                        <small><i>@Model.Last_Modified.ToString("dd/MMM/yyy hh:mm:ss tt")</i></small>
                        <div class="card card-cyan card-outline" style="background-color:#F5F5F5">
                            <div class="card-body box-profile">
                                <div class="text-center">
                                   
                                        @if (!string.IsNullOrEmpty(ViewBag.Pic))
                                        {
                                            <img class="profile-user-img img-fluid img-circle"
                                                 src="@ViewBag.Pic"
                                                 alt="User profile picture">
                                        }
                                        else
                                        {
                                            <img class="profile-user-img img-fluid img-circle"
                                                 src="~/dist/img/user.png"
                                                 alt="User profile picture">
                                        }                                   
                                </div>
                                <h3 class="profile-username text-center">@ViewBag.Name</h3>
                                <p class="text-muted text-center">Administrator</p>
                                <ul class="list-group list-group-unbordered mb-3" >
                                    <li class="list-group-item" style="background-color:#F5F5F5">
                                        <span class="text-muted">Email</span><small><i> <a href="#" class="float-right">@ViewBag.Email</a></i></small>
                                    </li>
                                </ul>                                
                            </div>
                            <!-- /.card-body -->
                        </div>
